{
  "name": "awesome-matchers",
  "version": "0.0.2",
  "scripts": {
    "clean": "rimraf dist",
    "tslint": "tslint --fix -p .",
    "prettier": "prettier --write \"**/*.{ts,js,json}\"",
    "format": "npm-run-all prettier tslint prettier",
    "start": "npm-run-all --parallel build:watch test:watch",
    "start:show": "npm-run-all --parallel build:watch test:show:alsatian:watch test:show:chai:watch ",
    "start:show:alsatian": "npm-run-all --parallel build:watch test:show:alsatian:watch",
    "start:show:chai": "npm-run-all --parallel build:watch test:show:chai:watch",
    "build": "mkdir -p dist && tsc",
    "build:watch": "tsc --watch",
    "test": "NODE_ENV=test alsatian \"./dist/**/*.spec.js\" -t 10000 --tap | tap-spec",
    "test:show:alsatian": "NODE_ENV=test alsatian \"./dist/**/*.alsatian.showSpec.js\" -t 10000 --tap | tap-spec",
    "test:show:chai": "NODE_ENV=test mocha \"./dist/**/*.chai.showSpec.js\"",
    "test:show:alsatian:watch": "nodemon --config nodemon.json --exec npm run test:show:alsatian",
    "test:show:chai:watch": "nodemon --config nodemon.json --exec npm run test:show:chai",
    "test-coverage": "nyc --reporter=lcov --reporter=html npm test:alsatian && nyc report",
    "precommit": "lint-staged",
    "postcommit": "git update-index -g",
    "release": "standard-version"
  },
  "nyc": {
    "include": [
      "dist/src"
    ],
    "extension": [
      ".ts"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/bluebird": "3.5.21",
    "@types/chai": "^4.1.5",
    "@types/lodash": "^4.14.116",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.14.4",
    "alsatian": "^2.4.0",
    "chai": "^4.2.0",
    "husky": "^1.0.1",
    "jest": "^24.7.1",
    "jest-extended": "^0.11.1",
    "lint-staged": "^7.3.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "standard-version": "^4.3.0",
    "tap-spec": "^4.1.1",
    "tap-xunit-alsatian": "^1.7.6",
    "ts-mockito": "^2.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "3.3.4000"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "uberscore": "0.0.20"
  },
  "peerDependencies": {
    "alsatian": "^2.4.0",
    "chai": "^4.2.0",
    "jest": "^24.7.1",
    "jest-extended": "^0.11.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anodynos/awesome-matchers"
  },
  "main": "dist/index.js"
}
